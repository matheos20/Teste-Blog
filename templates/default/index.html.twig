{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <section class="item content">
        <div class="container">
            <div class="underlined-title">
                <div class="editContent">
                    <h1 class="text-center latestitems">LATEST ITEMS</h1>
                </div>
                <div class="wow-hr type_short">
				<span class="wow-hr-h">
				<i class="fa fa-star"></i>
				<i class="fa fa-star"></i>
				<i class="fa fa-star"></i>
				</span>
                </div>
            </div>
            <div class="row">
                {% for article in articles %}
                    <div class="col-md-4">
                        <i class="fa fa-microphone infoareaicon"></i>
                        <div class="infoareawrap productbox">
                            <h1 class="text-center subtitle">{{ article.Titre }}</h1>
                            <p>
                                {{ article.Texte }}
                            </p>
                            <p class="text-center">
                                <a href="{{ path('article_details', {'id': article.id}) }}">- voirs plus -</a>
                            </p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

